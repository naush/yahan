%html
  %head
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery.min.js'
    = javascript_include_tag 'jquery.tools.min.js'
    = javascript_include_tag 'sign.js'
    = stylesheet_link_tag 'compiled/scrollable-buttons.css'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/SLCP2010.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Sign Language Communication Project
  %body
    #header
      = render :partial => 'layouts/header'
    %p{:class => "notice"}
    %p{:class => "alert"}
    = yield
    %img{:src => "/images/footer.jpg"}

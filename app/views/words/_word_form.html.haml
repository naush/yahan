%input{:type => 'button', :value => 'Return', :class => 'prev_page'}
%input{:type => 'button', :value => 'Add more movement', :class => 'next_page'}
- form_for @word do |f|
  .scrollable_page
    .items
      #selection
        #word_form{:style => "width: 600px; font-size: 12px; font-family: 'Lucida Grande', 'Lucida Sans Unicode', Tahoma, Arial, san-serif; vertical-align: baseline;"}
          %br
          #example{:style => "font-style: italic; float: right;"}
            Example:
          %h2{:style => "font: italic 24px Georgia, 'Times New Roman', Times, serif;"} Basic Information
          %br
          #word_text
            Word:
            = f.text_field :text, :size => 50
          #word_text_comment{:style => "font-style: italic; float: right;"}
            Word: Table
          %br
          %br
          #word_dialect
            Dialect:
            = f.select :dialect, Dialect.all.collect {|d| [d.name, d.id]}
          #word_text_comment{:style => "font-style: italic; float: right;"}
            Dialect: Traditional
          #post
          %br
          %br
          #word_memo
            Memo:
            = f.text_area :memo, :size => "40x10"
          #word_memo_comment{:style => "font-style: italic; float: right;"}
            Memo: A data chart
      - (1..3).each do |order|
        #selection
          #word_signs
            = render 'sign_form', :order => order
      #selection
        = f.submit "Submit"

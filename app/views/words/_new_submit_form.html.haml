#new_submit
  %h2 Submit New Word
  - form_for @word do |f|
    #form_field_0
      %h3 Word
      = f.text_field :word
    #form_field_1
      %h3 Dialect
      - Dialect.all.each do |dialect|
        = f.radio_button :dialect, dialect[:id]
        = label_tag :dialect, dialect[:name], :for => "word_dialect_" + dialect[:id].to_s
    #form_field_3
      %h3 Finger
      = radio_button_tag :finger, 1
      = label_tag :finger, "Zero, One", :for => "finger_1"
      = radio_button_tag :finger, 2
      = label_tag :finger, "Two", :for => "finger_2"
      = radio_button_tag :finger, 3
      = label_tag :finger, "Three", :for => "finger_3"
      = radio_button_tag :finger, 4
      = label_tag :finger, "Four, Five", :for => "finger_4"
    #form_field_4
      %h3 Shape
      - (1..4).each do |finger|
        #hand_shape{:id => finger}
          - @shapes.select{|shape| shape.finger == finger}.each do |shape|
            #selection
              = f.radio_button :shape, shape[:id]
              = label_tag nil, image_tag(shape[:url]), :for => "word_shape_" + shape[:id].to_s
    #form_field_2
      %h3 Hand
      = radio_button_tag :hand, 1
      = label_tag :hand, "One", :for => "hand_1"
      = radio_button_tag :hand, 2
      = label_tag :hand, "Two", :for => "hand_2"
    #form_field_5
      %h3 Orientation
      - Orientation.all.each do |orientation|
        #selection
          = f.radio_button :orientation, orientation[:id]
          = label_tag nil, image_tag(orientation[:url]), :for => "word_orientation_" + orientation[:id].to_s
    #form_field_6
      %h3 Position
      #position_hand{:id => "1"}
        - Position.one_hand.each do |position|
          #selection
            = f.radio_button :position, position[:id]
            = label_tag nil, image_tag(position[:url]), :for => "word_position_" + position[:id].to_s
      #position_hand{:id => "2"}
        - Position.two_hands.each do |position|
          #selection
            = f.radio_button :position, position[:id]
            = label_tag nil, image_tag(position[:url]), :for => "word_position_" + position[:id].to_s
    #form_field_7
      %h3 Movement
      - @positions.each do |position|
        #movement{:id => "position_#{position.id}"}
          - Movement.find_by_position(position).each do |movement|
            #selection
              = f.radio_button :movement, movement[:id]
              = label_tag nil, image_tag(movement[:url]), :for => "word_movement_" + movement[:id].to_s
    = f.submit "Submit"

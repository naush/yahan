#sign_finger
  %label Finger
  %input{:id => "sign_#{order}_#{direction}_finger_1", :name => "sign_#{order}[#{direction}_finger]", :type => "radio", :value => "1", :checked => "checked"}
  = label_tag :finger, "0-1", :for => "sign_#{order}_#{direction}_finger_1"
  %input{:id => "sign_#{order}_#{direction}_finger_2", :name => "sign_#{order}[#{direction}_finger]", :type => "radio", :value => "2"}
  = label_tag :finger, "2", :for => "sign_#{order}_#{direction}_finger_2"
  %input{:id => "sign_#{order}_#{direction}_finger_3", :name => "sign_#{order}[#{direction}_finger]", :type => "radio", :value => "3"}
  = label_tag :finger, "3", :for => "sign_#{order}_#{direction}_finger_3"
  %input{:id => "sign_#{order}_#{direction}_finger_4", :name => "sign_#{order}[#{direction}_finger]", :type => "radio", :value => "4"}
  = label_tag :finger, "4-5", :for => "sign_#{order}_#{direction}_finger_4"
  - (1..4).each do |finger|
    .handshape_class{:id => "sign_#{order}_#{direction}_handshape_section_#{finger}"}
      %a.prev.browse.left
      .scrollable
        .items
          - @handshapes.select {|handshape| handshape.finger == finger.to_s}.each do |handshape|
            #selection
              %input{:id => "sign_#{order}_#{direction}_handshape_finger_#{handshape[:id]}", :name => "sign_#{order}[#{direction}_handshape]", :type => "radio", :value => handshape[:id], :checked => handshape[:id] == 1}
              = label_tag nil, image_tag(handshape[:url]), :for => "sign_#{order}_#{direction}_handshape_finger_#{handshape[:id]}"
      %a.next.browse.right
#sign_orientation
  %h3 Orientation
  %a.prev.browse.left
  .scrollable
    .items
      - @orientations.each do |orientation|
        #selection
          %input{:id => "sign_#{order}_#{direction}_orientation_#{orientation[:id]}", :name => "sign_#{order}[#{direction}_orientation]", :type => "radio", :value => orientation[:id], :checked => orientation[:id] == 1}
          = label_tag nil, image_tag(orientation[:url]), :for => "sign_#{order}_#{direction}_orientation_#{orientation[:id]}"
  %a.next.browse.right
